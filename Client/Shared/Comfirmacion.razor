@if (MostrarConfirmacion)
{
<div class="modal-backdrop show "></div>
<div class="modal show" tabindex="-1" role="dialog" id="exampleModal" style="display:block">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Titulo</h5>
                <button type="button" @onclick="onCancel" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
              @ChildContent
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="onConfirm">Save changes</button>
                <button type="button" class="btn btn-secondary" @onclick="onCancel" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
}
@code {
    private bool MostrarConfirmacion = false;
    [Parameter] public string Titulo { get; set; } = "Confirmación";
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public EventCallback onConfirm { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
    public void Mostrar()=> MostrarConfirmacion = true;
    public void Ocultar() => MostrarConfirmacion = false;
}
